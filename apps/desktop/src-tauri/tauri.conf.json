{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Insta",
  "version": "0.1.0",
  "identifier": "com.insta.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Insta",
        "width": 1280,
        "height": 820,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Insta",
    "copyright": "Â© 2026 Insta"
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/your-org/insta-desktop/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  }
}
